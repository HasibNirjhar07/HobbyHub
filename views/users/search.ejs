<div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-header">
          <h4>Search Users</h4>
        </div>
        <div class="card-body">
          <form action="/users/search" method="GET" class="mb-4">
            <div class="input-group">
              <input type="text" name="q" class="form-control" placeholder="Search by username, name or email" value="<%= searchTerm %>">
              <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Search</button>
              </div>
            </div>
          </form>
          
          <% if (searchTerm && users.length === 0) { %>
            <div class="alert alert-info">
              No users found matching "<%= searchTerm %>"
            </div>
          <% } %>
          
          <% if (users.length > 0) { %>
            <h5>Search Results (<%= users.length %>)</h5>
            <div class="list-group">
              <% users.forEach(user => { %>
                <a href="/users/profile/<%= user._id %>" class="list-group-item list-group-item-action">
                  <div class="d-flex align-items-center">
                    <img src="<%= user.photo ? user.photo : '/img/default-profile.png' %>" alt="Profile Picture" class="rounded-circle mr-3" style="width: 50px; height: 50px; object-fit: cover;">
                    <div>
                      <h6 class="mb-0"><%= user.displayName || user.username %></h6>
                      <small class="text-muted">@<%= user.username %></small>
                    </div>
                  </div>
                </a>
              <% }); %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>